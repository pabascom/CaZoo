<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.HomeActivity">

    <ImageView
            android:id="@+id/ivHomeHeader"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cazoo"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

    <TextView
            android:id="@+id/tvHowItWorks"
            android:layout_below="@id/ivHomeHeader"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:text="How it Works:"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvDescriptionParagraph"
            android:layout_below="@id/tvHowItWorks"
            android:text="@string/description_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

    <TextView
            android:id="@+id/tvWhoWillSurvive"
            android:layout_below="@id/tvDescriptionParagraph"
            android:layout_marginTop="12dp"
            android:text="Who survives? You decide!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_below="@id/tvWhoWillSurvive"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_cat_solid_white"
            app:fabSize="normal"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_below="@id/fab"
            android:layout_marginTop="6dp"
            android:text="Get started"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textSize="7.1dp"
            android:text="@string/disclaimer_paragraph"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</RelativeLayout>